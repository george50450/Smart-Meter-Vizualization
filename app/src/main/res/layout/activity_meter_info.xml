<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#615F67"
    >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    tools:context=".MeterInfo">


    <TextView
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/meter_idTxt"
        android:background="#2D2C30"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Meter id"

        />

    <fragment
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/map"
        android:background="#fff"
        android:layout_gravity="center"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"

        android:background="#E0E7ED"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/generalInfo"
            android:gravity="center_horizontal"
            android:text="General Info"
            android:textStyle="bold|italic"
            android:textColor="#E40606"
            android:textSize="20dp"

            />

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/mp_name"
         android:layout_marginTop="10dp"
         android:textColor="#000000"
         android:textSize="20dp"

         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/meter_type"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="20dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/last_entry"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="20dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/volume"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="20dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/battery_lifetime"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="20dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comm_mod_type"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="20dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comm_mod_serial"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="20dp"

        />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E0E7ED"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/state"
            android:text="State"
            android:textStyle="bold|italic"
            android:gravity="center_horizontal"
            android:textColor="#E40606"
            android:textSize="20dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/state1"
            android:layout_marginTop="10dp"
            android:text="Continous Flow: "
            android:textColor="#000000"
            android:textSize="20dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/state2"
            android:layout_marginTop="10dp"
            android:text="Broken pipe: "
            android:textColor="#000000"
            android:textSize="20dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/state3"
            android:layout_marginTop="10dp"
            android:text="Battery Low: "
            android:textColor="#000000"
            android:textSize="20dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/state4"
            android:layout_marginTop="10dp"
            android:text="Back Flow: "
            android:textColor="#000000"
            android:textSize="20dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/state5"
            android:layout_marginTop="10dp"
            android:text="Communication Error: "
            android:textColor="#000000"
            android:textSize="20dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/state6"
            android:layout_marginTop="10dp"
            android:text="Parsing Error: "
            android:textColor="#000000"
            android:textSize="20dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/state7"
            android:layout_marginTop="10dp"
            android:text="Encoder Error: "
            android:textColor="#000000"
            android:textSize="20dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/state8"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:textSize="20dp"

            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/state9"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:textSize="20dp"

            />


    </LinearLayout>



</LinearLayout>
</ScrollView>